<% layout('layouts/boilerplate') %>

<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen"
                viewBox="0 0 16 16">
                <symbol id="pen">
                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                </symbol>
                <symbol id="heart-filled">
                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                </symbol>
                <symbol id="heart-empty">
                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                </symbol>
        </svg>

    <h1>Feed</h1>
    <% for (let tweet of tweets) {%>
        <div class="card mb-3 w-50 offset-3 bg-dark">
            <div class="row">
                <div class="col">
                    <div class="card-body">
                        <h4 class="card-title text-light">
                            @<a href="/profile/<%= tweet.author._id %>"><%= tweet.author.username %></a>
                        </h4>
                        <p class="card-text text-muted"><%= tweet.formattedTimestamp %> UTC</p>
                        <p class="card-text text-light">
                            <%= tweet.content %>
                        </p>
                        <!-- make sure user is logged in, and they're NOT on their own profile page. -->
                        <% if (currentUser && !tweet.author._id.equals(currentUser._id)) { %>
                                <form action="/liketweet/<%= tweet._id %>/<%= currentUser._id %>?_method=PUT&loc=home"
                                    method="post" style="display:inline;">
                                    <button id="like" class="btn btn-primary like">
                                        <!-- show the white heart if it hasn't been liked by the current user. red heart otherwise -->
                                        <% if(!tweet.likesRef.likers.includes(currentUser._id)) {%> 
                                            <svg class="bi" width="1em" height="1em"
                                            style="fill: white;">
                                            <use xlink:href="#heart-filled" />
                                            </svg>
                                        <% } else{ %> 
                                            <svg class="bi" width="1em" height="1em"
                                            style="fill: red;">
                                            <use xlink:href="#heart-filled" />
                                            </svg>
                                        <% } %> 
                                </button>
                                </form>
                                <% } %> 
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        
        <!-- Button trigger modal -->
        <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><svg
                        class="bi" width="1em" height="1em" style="fill: white;">
                        <use xlink:href="#pen" />
                </svg></button>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                        <div class="modal-content">
                                <div class="modal-header">
                                        <h1 class="modal-title fs-5 text-dark" id="staticBackdropLabel">Compose Tweet
                                        </h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                </div>
                                <form action="/posttweet" method="post">
                                        <div class="modal-body">
                                                <textarea name="content" id="content" cols="40"
                                                        rows="5"></textarea>
                                        </div>
                                        <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Post</button>

                                        </div>
                                </form>
                        </div>
                </div>
        </div>